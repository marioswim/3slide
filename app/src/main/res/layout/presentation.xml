<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:id="@+id/userScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/saveBtn"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fillViewport="false">

        <RelativeLayout
            android:id="@+id/user_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/userImgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/userNameConf"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/avatar"
                    android:layout_below="@+id/userImgLayout"
                    android:layout_centerHorizontal="true" />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:iiv_color="@color/accent"
                    app:iiv_icon="gmd_edit"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/userImg"
                    android:layout_toEndOf="@+id/userImg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_register_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/userImgLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Empresa/Profesional"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:clickable="false"
                    android:enabled="false"
                    android:editable="false" />

                <EditText
                    android:id="@+id/userSector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sector"
                    android:maxLines="1"
                    android:enabled="false"
                    android:singleLine="true"
                    android:clickable="false"
                    android:editable="false" />


                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/UploadPptBtn"
                    android:layout_width="match_parent"
                    style="@style/AlertDialog.AppCompat"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/accent"
                    android:text="Subir PresentaciÃ³n" />

            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</LinearLayout>